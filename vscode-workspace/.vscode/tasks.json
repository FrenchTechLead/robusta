{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Compiler",
			"type": "shell",
			"command": "cd .vscode && ./compile-task.sh \"${file}\"",
			"windows": {
				"command": "cd .vscode && compile-task.bat \"${file}\""
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"clear": true,
				"reveal": "always",
				"panel": "shared",
				"echo": false,
				"focus": true,
				"showReuseMessage": false
			}
		}
	]
}